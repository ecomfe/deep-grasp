{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "packages": [
    "packages/*",
    "showcase/*"
  ],
  "version": "0.1.0",
  "npmClient": "pnpm",
  "exact": true,
  "useNx": true,
  "command": {
    "version": {
      "allowBranch": [
        "master"
      ],
      "ignoreChanges": [
        "**/*.md",
        "**/__tests__/**",
        "**/.eslintrc.cjs",
        "**/tsconfig.json"
      ]
    },
    "publish": {
      "message": "chore: publish %s"
    }
  }
}
